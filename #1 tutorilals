"""this is the first video tutorial source code .."""
import pygame
#Intailsize the window screen..
pygame.init()

screen = pygame.display.set_mode((500,500))
pygame.display.set_caption("Hello Worlds")

run = True
#loop 
while run:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            run = False

    screen.fill((225,225,225))
    #white = 225,225,225
    #red = (225,0,0))
    pygame.display.update()
    #R,G,B = red,blue,green..
    
pygame.quit()
quit()
    
